{
  "name": "kodilla_learning-git-2",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init-project": "npm run init:git && npm run init:gitignore && npm install && npm run init:dirs && npm run init:files",
    "init:git": "git init",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:dirs": "mkdirp scss css",
    "init:files": "touch README.md index.html scss/main.scss",
    "test": "npm run test:html",
    "test:html": "globstar -- nu-html-checker *.html",

    "build": "npm run build:clean && npm run build:sass && npm run build:autoprefixer && npm run test:html",
    "build:clean": "rimraf css/*",
    "build:sass": "node-sass --output-style compressed scss/main.scss css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true scss/main.scss css/style.css",
    "build:autoprefixer": "postcss css/style.css -u autoprefixer -o css/style.css",

    "watch": "npm run build:clean && npm run build-dev:sass && npm-run-all -p watch:*",
    "watch:sass": "node-sass --output-style expanded --source-map true scss/main.scss css/style.css --watch",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- postcss css/style.css -u autoprefixer -o css/style.prefixed.css",
    "watch:browsersync": "browser-sync start --server --files css/*.css index.html"
  },
  "repository": "git@github.com:jaroslaw-bagnicki/kodilla_learning-git-2.git",
  "author": "Jaros≈Çaw Bagnicki <jarek@bagnicki.net>",
  "license": "mit",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^8.6.4",
    "browser-sync": "^2.24.5",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.0.0",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.2"
  }
}
